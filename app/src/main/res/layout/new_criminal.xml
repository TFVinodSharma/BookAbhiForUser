<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/criminalId">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rahul Gupta"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="5dp"
                android:id="@+id/criminalname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="5dp"
                android:text="CA-final,Rank 45 ,Nov 2015"
                android:id="@+id/criminalrank"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to secure rank"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="5dp"
                android:id="@+id/criminalwork"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9 Ratings"
                android:padding="5dp"
                android:id="@+id/criminalrating"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Reviews"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/criminalreviews"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs .50"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/criminalrupee"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book"
                android:textAllCaps="false"
                android:id="@+id/criminalbook"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
